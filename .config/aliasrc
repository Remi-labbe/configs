#
# ~/aliasrc
#

alias pac='sudo pacman' \

# classic terminal commands
alias \
    v='$EDITOR' \
    ..='cd ..' \
     ~='cd ~' \
    mkdir='mkdir -pv'

# access configs
alias \
    qtilecfg='$EDITOR ~/.config/qtile/config.py' \
    alacfg='$EDITOR ~/.config/alacritty/alacritty.yml'

# make things more readable
alias \
    ls='exa --color=always --group-directories-first -a' \
    df='df -h' \
    free='free -h' \
    du='du -hs' \
    rm='rm -v'

# network and server
alias \
    wifilist='nmcli device wifi list' \
    startsrv='sudo systemctl start httpd.service mariadb.service' \
    stopsrv='sudo systemctl stop httpd.service mariadb.service'
